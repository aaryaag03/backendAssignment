        .yo{
            margin: 20px;            
        } 
        .button{
            color: blanchedalmond;  
            background-color: cadetblue;
            border: 3px solid blanchedalmond;  
            font-size: 30px;
            height: 80px;
            left: 65.5px;
            margin-top: 20px;  
            position: relative;
            text-align: center;
            width: 300px;
        }
        .button:hover{
            background-color: blanchedalmond;
            color: black;
        } 
    </style>
</head>
<body>
    <h1>ENTER ADMIN DETAILS</h1>
    <div>
        <form action="/alogin" method="POST">
            <label for="">Username :</label>
            <input type="text" name="username" class="yo">
            <br>
            <label for="">Password :</label>
            <input type="password" name="password" class="yo">
            <br>
            <input type="submit" value="Login" class="button"/>        
        </form>
    </div>
